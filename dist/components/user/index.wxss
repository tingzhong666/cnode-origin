@import "../../fonticon/fonticon.wxss";
.user {
  background-color: #fff;
  height: 130rpx;
  display: flex;
}
.user.hover {
  background-color: #f6f6f6;
}
.user .img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user .img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.user .info {
  flex: 8;
  display: flex;
  flex-direction: column;
}
.user .info .name {
  flex: 6;
  display: flex;
  align-items: center;
}
.user .info .github {
  flex: 4;
}
.user .info .github text {
  font-size: 30rpx;
  color: #71777c;
}
.user .arrow {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #b4b4b4;
}
.li {
  background-color: #fff;
  height: 100rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.li.hover {
  background-color: #f6f6f6;
}
.li .iconfont {
  flex: 1;
  justify-content: center;
  display: flex;
  align-items: center;
  color: #80bd01;
}
.li .label {
  flex: 6;
  display: flex;
  align-items: center;
  font-size: 33rpx;
}
.li .n {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 20rpx;
  color: #71777c;
  font-size: 30rpx;
}
