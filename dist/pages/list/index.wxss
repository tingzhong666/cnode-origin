.not {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 20rpx 0;
}
.not .iconfont {
  color: #d4d6d8;
  font-size: 80rpx;
  padding: 10rpx 0;
}
.not .txt {
  color: #71777c;
  font-size: 25rpx;
  padding: 10rpx 0;
}
.li {
  background-color: #fff;
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.li.hover {
  background-color: #f6f6f6;
}
.li .img {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.li .img image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.li .info {
  flex: 7;
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.li .info .title {
  flex: 6;
  color: #333;
  font-size: 35rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.li .info .bottom {
  flex: 4;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #71777c;
}
